{
  "name": "@diversify-io/core",
  "version": "1.0.0",
  "description": "Smart contracts for Diversify.",
  "files": [
    "contracts",
    "artifacts",
    "types"
  ],
  "author": "Diversify <contact@diversify.io>",
  "homepage": "https://diversify.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/Diversify-io/diversify-core.git"
  },
  "keywords": [
    "diversify",
    "contracts",
    "ethereum",
    "solidity"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.6",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "4.3.2",
    "@openzeppelin/contracts-upgradeable": "4.3.2",
    "@openzeppelin/hardhat-upgrades": "^1.9.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.2.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^8.2.3",
    "@types/node": "^16.4.0",
    "chai": "^4.3.4",
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.2",
    "hardhat": "^2.5.0",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-preprocessor": "^0.1.4",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "hardhat-watcher": "^2.1.1",
    "mocha": "^9.0.3",
    "moment": "^2.29.1",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.17",
    "sol2uml": "^1.1.29",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:size": "yarn build && hardhat size-contracts",
    "package:publish": "yarn build && yarn tsc types/**/*.ts && yarn publish --access public",
    "console": "hardhat console",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "mainnet:deploy": "hardhat --network mainnet run scripts/001_initial_deploy_setup.ts",
    "rinkeby:deploy": "hardhat --network rinkeby run scripts/001_initial_deploy_setup.ts",
    "localhost:deploy": "hardhat --network localhost run scripts/001_initial_deploy_setup.ts",
    "test": "hardhat test --verbose",
    "test:coverage": "yarn build && hardhat coverage",
    "test:gas": "cross-env REPORT_GAS=true yarn test",
    "prettier": "prettier --write test/**/*.ts && prettier --write contracts/**/*.sol",
    "lint": "yarn prettier && solhint -c .solhint.json contracts/**/*.sol",
    "uml": "sol2uml ./contracts -o ./img/uml-diversify.svg"
  }
}
